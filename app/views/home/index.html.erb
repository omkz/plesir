<div class="container">
        <div id="flow">
            <span class="flow-1"></span>
            <span class="flow-2"></span>
            <span class="flow-3"></span>
        </div>
        <div class="section">
            <div class="box">
                <div class="field has-addons">
                    <div class="control is-expanded">
                        <input class="input has-text-centered" type="search" placeholder="» » » » » » find me « « « « « «">
                    </div>
                    <div class="control">
                        <a class="button is-info">Search</a>
                    </div>
                </div>
            </div>
            <!-- Developers -->
            <div class="row columns is-multiline">
                <% @articles.each do|article| %>
                  <div class="column is-one-third">
                        <div class="card large">
                            <div class="card-image">
                                <figure class="image">
                                  <%= image_tag article.poster.url if article.poster.present?%>
                                </figure>
                            </div>
                            <div class="card-content">
                                <div class="media">
                                    <div class="media-left">
                                        <figure class="image is-96x96">
                                            <%= image_tag article.user.avatar.url(:thumb) if article.user.avatar.present? %> 
                                        </figure>
                                    </div>
                                    <div class="media-content">
                                        <p class="title is-4 no-padding"><%= article.user.username %></p>
                                        <p><span class="title is-6"><a href="http://twitter.com/#"><%= article.user.location %></a></span></p>
                                        <p class="subtitle is-6"><%= article.user.bio %></p>
                                    </div>
                                </div>
                                <div class="content">
                                        <%= article.description %>
                                    <div class="background-icon"><span class="icon-twitter"></span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
               
                
            </div>
            <!-- End Developers -->

        </div>
    </div>
